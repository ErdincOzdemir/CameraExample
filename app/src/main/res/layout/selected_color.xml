<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/selected_color_padding">

    <LinearLayout
        android:layout_width="@dimen/selected_color_size"
        android:layout_height="@dimen/selected_color_size"
        android:orientation="vertical"
        android:id="@+id/color"></LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/colorValue"
        android:textSize="@dimen/selected_color_text_size"/>

</LinearLayout>